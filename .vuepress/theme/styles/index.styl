body
  font-size 20px
  font-family Arial, sans-serif
  color #3a3a3a

img
  height 100%
  width 100%
  max-width 500px

.layout
  padding 1rem
  margin 0 auto
  text-align center

a
  color #3a3a3a
  text-decoration none

h1
  margin-top .5rem

.nav-link:not(:last-child)
  margin-right 1rem

.active-nav-link
  text-decoration underline

.posts
  display grid
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr))
  gap: 1rem
  max-width 900px
  margin 0 auto

.blog-post
  margin-bottom 1rem

.post-title
  font-size 1.5rem
  margin 0

.post-type
  font-size 2rem

.post-date
  font-size .9rem

.emoji
  font-size 2.5rem
  margin-top 1rem